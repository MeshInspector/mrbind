    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (LLDB-DAP)",
            "type": "lldb-dap",
            "request": "launch",
            "program": "${workspaceFolder}/build/<MODE>/<EXECUTABLE>",
            "args": [/*<ARGS_ARR>*/],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build",
            "disableASLR": false, // Allow running in docker.
        },
        {
            "name": "Debug (CodeLLDB)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/<MODE>/<EXECUTABLE>",
            "args": "<ARGS>",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build",
        },
    ]
}
